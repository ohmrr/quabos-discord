{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2023",

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "allowJs": false,
    "checkJs": false,

    "newLine": "lf",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "pretty": true,

    "outDir": "./dist",
    "rootDir": "./src"
  }
}
